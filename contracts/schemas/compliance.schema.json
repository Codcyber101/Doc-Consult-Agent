{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ComplianceReport",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": ["PASS", "FAIL", "CONDITIONAL", "UNCERTAIN"]
    },
    "readiness_score": {
      "type": "integer",
      "minimum": 0,
      "maximum": 100
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "code": { "type": "string" },
          "message": { "type": "string" },
          "severity": { "type": "string", "enum": ["INFO", "WARNING", "ERROR"] },
          "remediation": { "type": "string" }
        }
      }
    }
  },
  "required": ["status", "readiness_score"]
}